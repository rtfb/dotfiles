[user]
    name = Vytautas Å altenis
    email = vytas@rtfb.lt

[include]
    path = ~/.gitconfig.local

[color]
    ui = auto

[color "diff"]
    meta = yellow bold
    frag = magenta bold
    old = red bold
    new = green bold
    whitespace = red reverse

[color "status"]
    added = yellow
    changed = green
    untracked = cyan

[alias]
    st = status -s
    ci = commit
    br = branch
    co = checkout
    df = diff
    dc = diff --cached
    lg = log -p
    l = log --graph --decorate --pretty=oneline --abbrev-commit
    la = log --graph --decorate --pretty=oneline --abbrev-commit --all
    ls = ls-files

    # Show files ignored by git:
    ign = ls-files -o -i --exclude-standard

    # Figure out SHA1 by tag name
    tagcommit = !sh -c 'git rev-list $0 | head -n 1'
[push]
	default = simple
